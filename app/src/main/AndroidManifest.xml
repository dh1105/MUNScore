<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.munscore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommitteeActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ParamClass"
            android:launchMode="singleTop"
            android:parentActivityName=".CommitteeActivity" />
        <activity
            android:name=".AddCountries"
            android:parentActivityName=".ParamClass" />
        <activity
            android:name=".SelectCountries"
            android:parentActivityName=".ParamClass"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DayOneScore"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".DayTwoScore"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".DayThreeScore"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>